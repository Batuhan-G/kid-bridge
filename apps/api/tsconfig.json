{
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES2021",
      "moduleResolution": "node",
      "outDir": "dist",
      "rootDir": "src",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"]
  }
  